<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:colorControlHighlight">
  <item android:state_pressed="true" >
    <shape android:shape="oval"  >
      <size
          android:width="100dp"
          android:height="100dp"/>
      <corners android:radius="10dip" />
      <stroke android:width="3dip" android:color="#AD95D8" />
      <gradient android:angle="180" android:startColor="#F1ECEC" android:endColor="#C6B8DF" />
    </shape>
  </item>
  <item android:state_focused="true">
    <shape android:shape="oval"  >
      <size       android:width="100dp"
          android:height="100dp"/>
      <stroke android:width="3dip" android:color="#AD95D8" />
      <gradient android:angle="180" android:startColor="#F1ECEC" android:endColor="#C6B8DF" />
    </shape>
  </item>
  <item>
    <shape android:shape="oval"  >
      <corners android:radius="10dip" />
      <size
          android:width="100dp"
          android:height="100dp"/>
      <stroke android:width="1dp" android:color="#AD95D8" />
      <gradient android:angle="90" android:startColor="#F1ECEC" android:endColor="#C6B8DF" />
    </shape>
  </item>
</ripple>
